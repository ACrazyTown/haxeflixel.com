<!DOCTYPE html>
<html lang="en">

<%- @partial('head.html.eco', {title:@getPreparedTitle()}, {description:@getPreparedDescription()}, {keywords:@getPreparedKeywords()}, {author:@site.author or ''}, {styles:@getBlock("styles").add(["/styles/style.css"]).toHTML()} ) %>

<body>

<%- @partial('header-menu.html.eco', {ashowcase:"class='active'"}) %>

<div class="container container-main">

	<div class="container-main-content">
		<div class="demo-content">

			<h1 class="title"><%= @document.title %></h1>

			<img src="<%= @getThumbnail("/showcase/images/#{@document.thumb}", "zoomcrop", { w: 640, h:480 }) %>" alt="<%= @document.title %>">

			<hr>

			<%- @content %>

			<hr>

			<div class="showcases-targets">

				<a href="<%= @document.linux %>" <% if @document.linux: %>class="showcases-target-active"<% end %>>
					<img width="40px" height="49px" src="/images/targets/linux-logo.svg">
				</a>

				<a href="<%= @document.mac %>" <% if @document.mac: %>class="showcases-target-active"<% end %>>
					<img width="40px" height="40px" src="/images/targets/apple-logo.svg">
				</a>

				<a href="<%= @document.windows %>" <% if @document.windows: %>class="showcases-target-active"<% end %>>
					<img width="40px" height="40px" src="/images/targets/windows-logo.svg">
				</a>

				<a href="<%= @document.android %>" <% if @document.android: %>class="showcases-target-active"<% end %>>
					<img width="40px" height="40px" src="/images/targets/android-logo.svg">
				</a>

				<a href="<%= @document.ios %>" <% if @document.ios: %>class="showcases-target-active"<% end %>>
					<img width="40px" src="/images/targets/ios-logo.svg">
				</a>

				<a href="<%= @document.neko %>" <% if @document.neko: %>class="showcases-target-active"<% end %>>
					<img width="40px" height="40px" src="/images/targets/neko-logo.jpg">
				</a>

				<a href="<%= @document.ouya %>" <% if @document.ouya: %>class="showcases-target-active"<% end %>>
					<img width="38px" height="38px" src="/images/targets/ouya-logo.svg">
				</a>

				<a href="<%= @document.blackberry %>" <% if @document.blackberry: %>class="showcases-target-active"<% end %>>
					<img width="40px" height="40px" src="/images/targets/blackberry-logo.svg">
				</a>

				<a href="<%= @document.flash %>" <% if @document.flash: %>class="showcases-target-active"<% end %>>
					<img width="40px" height="40px" src="/images/targets/flash-logo.svg">
				</a>

			</div>

			<hr>

			<ul class="pager">
				<% if @getPagerPrevious('showcase'): %>
				<li class="previous">
					<a href="<%= @getPagerPrevious('showcase').attributes.url %>" title="Previous"> <
						<img src="<%= @getThumbnail("/showcase/images/#{@getPagerPrevious('showcase').attributes.thumb}", "zoomcrop", { w: 70, h:70 }) %>" alt="Previous">
					</a>
				</li>
				<% end %>

				<% unless @getPagerPrevious('showcase')?: %>
				<li class="previous">
					<a href="<%= @getLast('showcase').attributes.url %>" title="Previous"> <
						<img src="<%= @getThumbnail("/showcase/images/#{@getLast('showcase').attributes.thumb}", "zoomcrop", { w: 70, h:70 }) %>" alt="Previous">
					</a>
				</li>
				<% end %>

				<% if @getPagerNext('showcase'): %>
				<li class="next">
					<a href="<%= @getPagerNext('showcase').attributes.url %>" title="Next">
						<img src="<%= @getThumbnail("/showcase/images/#{@getPagerNext('showcase').attributes.thumb}", "zoomcrop", {w: 70, h:70 }) %>" alt="Next">
						>
					</a>
				</li>
				<% end %>

				<% unless @getPagerNext('showcase')?: %>
				<li class="next">
					<a href="<%= @getFirst('showcase').attributes.url %>" title="Next">
						<img src="<%= @getThumbnail("/showcase/images/#{@getFirst('showcase').attributes.thumb}", "zoomcrop", { w:70, h:70 }) %>" alt="Next">
						>
					</a>
				</li>
				<% end %>
			</ul>


		</div>
	</div>

</div>

<%- @partial('footer.html') %>

<%- @getBlock('scripts').add(@site.scripts).toHTML() %>

</body>
</html>